{
  "ignorePatterns": [
    "**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [ ],
            "depConstraints": [
              {
                "onlyDependOnLibsWithTags": [
                  "*"
                ],
                "sourceTag": "*"
              }
            ],
            "enforceBuildableLibDependency": true
          }
        ]
      }
    },
    {
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parserOptions": {
        "project": "./tsconfig.base.json"
      },
      "rules": { }
    },
    {
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": { }
    },
    {
      "env": {
        "jest": true
      },
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "rules": { }
    }
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "root": true
}
